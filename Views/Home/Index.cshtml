@model Todo.Models.ViewModels.TodoViewModel

<!DOCTYPE html>
<html>
<!-- head to link the styles-->
<head>
    <title>Todo List</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <!-- To align the content to the center-->
    <center>
        <h2><u>Todo List</u></h2> <!-- To add heading -->
        <p>
            <!-- Form to insert a new Todo -->
            <form asp-action="Insert" method="post" role="form">
                <!-- To display errors if any -->
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Todo.Name"></label>
                    <!-- Textarea for entering the Todo list -->
                    <textarea asp-for="Todo.Name" class="form-control" style="width: 200px;"></textarea>
                    <span asp-validation-for="Todo.Name" class="text-danger"></span>
                </div>
                <!-- To provide a space between textarea and button -->
                <div class="form-group" style="margin-top: 10px;">
                    <!-- To add Todo button -->
                    <button type="submit" class="btn btn-success">Add Todo</button>
                </div>
            </form>
        </p>
        <p>
            <!-- To display the created Todos in a table -->
            <div id="firstTable">
                <center>
                    <table>
                        <thead>
                            <tr class="table-primary">
                                <th style="width:10%" scope="col">Id</th>
                                <th style="width:50%" scope="col">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- To loop through each Todo list -->
                            @foreach (var t in Model.TodoList)
                            {
                                <tr>
                                    <td class="todos-column" scope="row">@t.Id</td>
                                    <td class="todos-column">@t.Name</td>
                                    <td class="buttons-column">
                                        <!-- Delete and Update buttons -->
                                        <input type="submit" class="btn btn-danger" value="Delete" onClick="deleteTodo(@t.Id)">
                                        <input type="submit" class="btn btn-primary" value="Update" onClick="populateForm(@t.Id)">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </center>
            </div>
        </p>
    </center>
</body>
</html>
